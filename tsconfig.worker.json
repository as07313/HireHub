    "moduleResolution": "node",
    "target": "ES2020",
    "outDir": "dist",
    "noEmit": false,
    "esModuleInterop": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["./*"]
    }
  },
  "include": ["lib/queue/workers/**/*.ts"],
  "exclude": ["node_modules"]
}